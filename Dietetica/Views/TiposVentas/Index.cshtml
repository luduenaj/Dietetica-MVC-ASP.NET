@model Dietetica.ModelsView.TipoVentaViewModel
    @{
        ViewData["Title"] = "Index";
    }

    <h1>Tipo de venta</h1>

    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ListaTiposVentas[0].tipoDeVenta)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ListaTiposVentas)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.tipoDeVenta)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <partial name="_paginador" for="@Model.paginador" />
