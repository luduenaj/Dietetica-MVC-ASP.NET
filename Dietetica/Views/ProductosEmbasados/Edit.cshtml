@model Dietetica.Models.ProductoEmbasado

@{
    ViewData["Title"] = "Edit";
}
<head>
    <link href="~/css/editStyle.css" rel="stylesheet" />
</head>

<h1>Edit</h1>

<h4>ProductoEmbasado</h4>
<hr />
<div class="row">
    <div class="shadow-sm p-3 mb-5 bg-white rounded" id="card">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="nombre" class="control-label">Nombre</label>
                <input asp-for="nombre" class="form-control" />
                <span asp-validation-for="nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="precioPorUnidad" class="control-label">Precio por Unidad</label>
                <input asp-for="precioPorUnidad" class="form-control" />
                <span asp-validation-for="precioPorUnidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="gramos" class="control-label">Gramos</label>
                <input asp-for="gramos" class="form-control" />
                <span asp-validation-for="gramos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" name="foto" id="foto" value="@Model.foto" />
                <img src="@(!string.IsNullOrEmpty(Model.foto) ? "/fotos/"+Model.foto : "")" id="imagen" class="rounded-circle" style="max-width:75px" />
                <input type="file" name="seleccionImg" id="seleccionImg" accept="image/jpeg" />

                <span asp-validation-for="foto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdTipoVenta" class="control-label">Tipo de Venta</label>
                <select asp-for="IdTipoVenta" class="form-control" asp-items="ViewBag.idTipoVenta"></select>
                <span asp-validation-for="IdTipoVenta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdProveedor" class="control-label">Proveedor</label>
                <select asp-for="IdProveedor" class="form-control" asp-items="ViewBag.idProveedor"></select>
                <span asp-validation-for="IdProveedor" class="text-danger"></span>
            </div>
            <div class="form-group" id="saveDiv">
                <input type="submit" value="Save" id="saveBtn" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<script src="~/js//preview.js"></script>

