@model Dietetica.Models.Proveedor

@{
    ViewData["Title"] = "Create";
}
<head>
    <link href="~/css/createStyle.css" rel="stylesheet" />
</head>
<h1>Crear Proveedor</h1>

<div class="shadow-sm p-3 mb-5 bg-white rounded importarDiv">
    <div class="col-12">
        Puedes importar datos desde archivo CSV:
        <form asp-action="Importar" enctype="multipart/form-data">
            <input class="form-control" name="archImportar" id="archImportar" type="file" />
            <div class="form-group">
                <input type="submit" value="Importar" class="btn importarBtn" />
            </div>
        </form>
    </div>
</div>


<hr />
<div class="shadow-sm p-3 mb-5 bg-white rounded createDiv">
    <div class="col-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="nombre" class="control-label">Nombre</label>
                <input asp-for="nombre" class="form-control" />
                <span asp-validation-for="nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="telefono" class="control-label">Telefono</label>
                <input asp-for="telefono" class="form-control" />
                <span asp-validation-for="telefono" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="email" class="control-label">Email</label>
                <input asp-for="email" class="form-control" />
                <span asp-validation-for="email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
