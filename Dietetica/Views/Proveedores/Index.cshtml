@*@model IEnumerable<Dietetica.Models.Proveedor>*@
@model Dietetica.ModelsView.ProveedorViewModel
@{
    ViewData["Title"] = "Index";
}
<head>
    <link href="~/css/indexStyle.css" rel="stylesheet" />
</head>
<h1>Proveedores</h1>

<p>
    <a asp-action="Create" style="color: #28590C;">Create New</a>
</p>

<form asp-action="Index" method="get">
    <p>
        Filtros:<br />
        Nombre: <input type="text" class="form-control" name="busqNombre" value="@Model.busqNombre" />
        <input class="btn" type="submit" value="Filtrar" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                Nombre
            </th>
            <th>
                Telefono
            </th>
            <th>
                Email
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ListaProveedores)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.telefono)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.email)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn edit">Edit</a> 
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn details">Details</a> 
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn delete">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<partial name="_paginador" for="@Model.paginador" />
