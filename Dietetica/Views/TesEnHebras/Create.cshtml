@model Dietetica.Models.TeEnHebras

@{
    ViewData["Title"] = "Create";
}
<head>
    <link href="~/css/createStyle.css" rel="stylesheet" />
</head>
<h1>Create</h1>

<h4>TeEnHebras</h4>
<hr />
<div class="shadow-sm p-3 mb-5 bg-white rounded createDiv">
    <div class="col-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="nombre" class="control-label">Nombre</label>
                <input asp-for="nombre" class="form-control" />
                <span asp-validation-for="nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="precioX100gr" class="control-label">Precio por 100 gramos</label>
                <input asp-for="precioX100gr" class="form-control" />
                <span asp-validation-for="precioX100gr" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdTipoVenta" class="control-label">Tipo de Venta</label>
                <select asp-for="IdTipoVenta" class="form-control" asp-items="ViewBag.TiposList"></select>
                <span asp-validation-for="IdTipoVenta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdProveedor" class="control-label">Proveedor</label>
                <select asp-for="IdProveedor" class="form-control" asp-items="ViewBag.proveedorList"></select>
                <span asp-validation-for="IdProveedor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
